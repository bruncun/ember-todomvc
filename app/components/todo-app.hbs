<section class="todoapp">
  <header class="header">
    <h1>todos</h1>
    <TodoApp::NewTodo />
  </header>
  {{#unless this.isTodosEmpty}}
    {{! This section should be hidden by default and shown when there are todos }}
    <section class="main">
      <TodoApp::ToggleAll
        @isAllTodosCompleted={{this.isAllTodosCompleted}}
        @todos={{@todos}}
      />
      <TodoApp::TodoList @todos={{@todos}} />
    </section>
    {{! This footer should be hidden by default and shown when there are todos }}
    <footer class="footer">
      {{! This should be `0 items left` by default }}
      <TodoApp::TodoCount @todos={{@todos}} />
      {{! Remove this if you don't implement routing }}
      <TodoApp::Footer @filter={{@filter}} />
      {{! Hidden if no completed items are left ↓ }}
      {{#unless this.isCompletedTodosEmpty}}
        <TodoApp::ClearCompleted @todos={{@todos}} />
      {{/unless}}
    </footer>
  {{/unless}}
</section>
<footer class="info">
  <p>Double-click to edit a todo</p>
