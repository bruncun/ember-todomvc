{{page-title "Index"}}
<Layout @isTodosEmpty={{this.isTodosEmpty}}>
  <:header>
    <Header />
  </:header>
  <:main>
    <Main
      @isAllTodosCompleted={{this.isAllTodosCompleted}}
      @todos={{this.filteredTodos}}
    />
  </:main>
  <:footer>
    <Footer
      @todos={{@model.todos}}
      @filter={{this.filter}}
      @isCompletedTodosEmpty={{this.isCompletedTodosEmpty}}
    />
  </:footer>
  <:info>
    <Info />
  </:info>
</Layout>